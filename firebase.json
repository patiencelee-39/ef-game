{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      ".venv/**",
      "**/node_modules/**",
      "_archive/**",
      "docs/**",
      "**/*.md",
      "**/*.pdf",
      "scripts/**",
      "src/**",
      "dist/**",
      "vite.config.js",
      "package.json",
      "package-lock.json",
      "database.rules.json",
      "firestore.rules",
      "firestore.indexes.json",
      "**/*.py",
      "**/*.sh",
      "**/Icon\r"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "X-Frame-Options", "value": "DENY" },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "camera=(), microphone=(), geolocation=()"
          }
        ]
      },
      {
        "source": "singleplayer/guides/**",
        "headers": [{ "key": "X-Frame-Options", "value": "SAMEORIGIN" }]
      },
      {
        "source": "**/*.@(js|css|svg|png|webp|mp3|ogg|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store"
          }
        ]
      },
      {
        "source": "manifest.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/r/:roomCode",
        "destination": "/multiplayer/room-join.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
